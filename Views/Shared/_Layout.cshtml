<!DOCTYPE html>
<html lang="en">

@{

    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;
    @inject pineapple_shopModel.pineapple_shopModel _context;
    var query = HttpContextAccessor.HttpContext.User.Claims.FirstOrDefault();
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PineappleShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <ul class="navbar-nav mr-auto">
                </ul>
                <form class="form-inline pull-right my-lg-0">
                    @if (query != null)
                    {
                        <a class="text-muted">You are logged in as:</a>
                        <a class="nav-link text-secondary" asp-controller="Home" asp-action="Index">@query.Value</a>
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit" asp-area="" asp-controller="Auth" asp-action="LogOut">Log out</button>
                    }
                </form>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - PineappleShop - Alexandra Yevtushenko
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
